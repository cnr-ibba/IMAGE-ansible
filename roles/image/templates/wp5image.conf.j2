# Default server configuration
# redirect all non-www request to www on new domain
server {
    listen       80 default_server;
    listen       [::]:80 default_server;
    server_name  {{ old_domain_name }};
    return       301 http://{{ image_server_name }}$request_uri;
}


# Web portal server
# readirect all request to the new domain
server {
  listen 80;
  listen [::]:80;
  server_name {{ old_image_server_name }};

  # SSL configuration for data portal

  # redirect all traffic
  return       301 http://{{ image_server_name }}$request_uri;
}


